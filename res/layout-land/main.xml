<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:background="@color/tlo"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="15dip">
  <LinearLayout 
  	android:orientation="vertical"
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	android:layout_gravity="center"
  	android:paddingLeft="20dip"
  	android:paddingRight="20dip">
  	<TextView 
  		android:text="@string/glowny_tytul"
  		android:layout_height="wrap_content"
  		android:layout_width="wrap_content"
  		android:layout_gravity="center"
  		android:layout_marginBottom="20dip"
  		android:textSize="24.5sp" />
  	<TableLayout 
  		android:layout_height="wrap_content"
  		android:layout_width="wrap_content"
  		android:layout_gravity="center"
  		android:stretchColumns="*">
  		<TableRow>
  			<Button 
  				android:id="@+id/przycisk_kontynuacja"
  				android:text="@string/etykieta_kontynuacja"/>
  			<Button 
  				android:id="@+id/przycisk_nowa_gra"
  				android:text="@string/etykieta_nowa_gra"/>
  		</TableRow>
  		<TableRow>
  			<Button 
  				android:id="@+id/przycisk_informacje"
  				android:text="@string/etykieta_informacje"/>
  			<Button 
  				android:id="@+id/przycisk_wyjscie"
  				android:text="@string/etykieta_wyjscie"/>
  		</TableRow>
  	</TableLayout>
  </LinearLayout>
    
</LinearLayout>
